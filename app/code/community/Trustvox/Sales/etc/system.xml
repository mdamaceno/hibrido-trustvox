<?xml version="1.0" ?>
<config>

    <tabs>
        <trustvox_options translate="label" module="trustvox">
            <label>Trustvox</label>
            <sort_order>1</sort_order>
        </trustvox_options>
    </tabs>

    <sections>
        <trustvox_options module="trustvox">
            <tab>trustvox_options</tab>
            <label>Configurações</label>
            <frontend_type>text</frontend_type>
            <sort_order>2</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuracoes translate="label" module="trustvox">
                    <label>Configurações</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>
                        <![CDATA[
                        by <a href="http://emiolo.com/" target="_blank">
                        <img title="Emiolo" alt="Emiolo" src="http://emiolo.com/logo3.png" /></a>
                        ]]>
                    </comment>
                    <fields>
                        <numero_da_loja translate="label" module="trustvox">
                            <label>Número da Loja</label>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </numero_da_loja>
                        <titulo_do_widget translate="label" module="trustvox">
                            <label>Título do Widget</label>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </titulo_do_widget>
                        <posicao_do_widget translate="label" module="trustvox">
                            <label>Posição do Widget</label>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>trustvox/system_config_source_posicoes</source_model>
                        </posicao_do_widget>
                        <mostrar_estrelas translate="label" module="trustvox">
                            <label>Mostrar estrelas?</label>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>trustvox/system_config_source_yesno</source_model>
                        </mostrar_estrelas>
                    </fields>
                </configuracoes>
            </groups>
        </trustvox_options>
    </sections>
</config>
